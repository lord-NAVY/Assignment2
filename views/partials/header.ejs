  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <!-- Brand/logo -->
    <a class="navbar-brand" href="#">
      <img src="/images/logo.png" alt="logo" style="width:40px;">
    </a>

    <!-- Links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/"><i class="fas fa-home"></i>Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/about"><i class="fas fa-user"></i> About me</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/projects"><i class="fas fa-tasks"></i> Projects</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/services"><i class="fas fa-headset"></i> Services</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/contact-list"><i class="far fa-id-card"></i> Contacts</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/contact"><i class="fas fa-phone"></i> Contact Me</a>
      </li>
      <% if(typeof displayName == 'string' && displayName) { %>
        <li style="padding-left: 50px;" class="navbar-text"><i class="fas fa-lg fa-user"></i> Welcome, <%= displayName %></li>
        <li class="nav-item"><a href="/logout" class="nav-link">
          <i class="fas fa-lg fa-sign-out-alt"></i> Logout</a></li>
      <% } else { %>
        <li class="nav-item"><a href="/login" class="nav-link">
          <i class="fas fa-lg fa-sign-in-alt"></i> Login</a></li>
      <% } %>
    </ul>
    
  </nav>